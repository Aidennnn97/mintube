extends layout

block content 
    h4 Update Video
    form(method="post")
        input(name="title" type="text" placeholder="Video Title" value=video.title required)
        input(type="text" placeholder="Description" required name="description" minlength=20 value=video.description)
        input(type="text" placeholder="Hashtags, separated by comma." required name="hashtags" value=video.hashtags.join())
        input(type="submit", value="Save")